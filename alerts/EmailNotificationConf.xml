<id>gmail</id>
<smtpServer>smtp.gmail.com</smtpServer>
<smtpPort>587</smtpPort>
<sender>datatorrent.alerts@gmail.com</sender>
<password>password</password>
<enableTls>true</enableTls>
<mergePolicy>configOnly</mergePolicy>
</emailContext>
<emailRecipient>
<id>alladmin</id>
<to>to1</to>
<to>to2</to>
<cc>cc1</cc>
<cc>cc2</cc>
<bcc>bcc1</bcc>
<bcc>bcc2</bcc>
